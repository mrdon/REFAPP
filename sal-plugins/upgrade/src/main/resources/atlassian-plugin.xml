<atlassian-plugin key="com.atlassian.sal.refimpl.upgrade" name="${project.name}" system="true" pluginsVersion="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${pom.version}</version>
        <vendor name="Atlassian Software Systems Pty Ltd" url="http://www.atlassian.com"/>
    </plugin-info>
    
    <component-import key="transactionTemplate" interface="com.atlassian.sal.api.transaction.TransactionTemplate" />
    <component-import key="pluginSettingsFactory" interface="com.atlassian.sal.api.pluginsettings.PluginSettingsFactory" />
    
    <component key="pluginUpgradeManager" name="pluginUpgradeManager"
               class="com.atlassian.sal.refimpl.upgrade.RefImplPluginUpgradeManager"
               system="true" public="true">
        <interface>com.atlassian.sal.api.upgrade.PluginUpgradeManager</interface>
        <interface>com.atlassian.sal.api.lifecycle.LifecycleAware</interface>
    </component>
</atlassian-plugin>

