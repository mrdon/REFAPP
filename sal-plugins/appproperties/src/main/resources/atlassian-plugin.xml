<atlassian-plugin key="com.atlassian.sal.refimpl.appproperties" name="${project.name}" system="true" pluginsVersion="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${pom.version}</version>
        <vendor name="Atlassian Software Systems Pty Ltd" url="http://www.atlassian.com"/>
    </plugin-info>

    <component name="Application Properties" key="applicationProperties" class="com.atlassian.sal.refimpl.RefimplApplicationProperties"
               system="true" public="true">
        <interface>com.atlassian.sal.api.ApplicationProperties</interface>
    </component>

    <servlet-filter name="Servlet Context Thread Local Filter"
                    key="servletContextThreadLocalFilter"
                    class="com.atlassian.core.filters.ServletContextThreadLocalFilter"
                    location="before-decoration"
                    weight="1">
        <description>Makes the servlet context, request, and response available through static methods.</description>
        <url-pattern>/</url-pattern>
    </servlet-filter>
</atlassian-plugin>

