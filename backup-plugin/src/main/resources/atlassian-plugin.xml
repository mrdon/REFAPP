<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>

    <servlet name="Backup Servlet" class="com.atlassian.refapp.backup.BackupServlet" key="backup-servlet">
        <url-pattern>/backup</url-pattern>
    </servlet>

    <servlet name="Restore Servlet" class="com.atlassian.refapp.backup.RestoreServlet" key="restore-servlet">
        <url-pattern>/restore</url-pattern>
    </servlet>

    <web-item name="Backup Link" key="backupLink" section="index.links" weight="40" application="refapp">
        <label key="Backup"/>
        <link linkId="backupLink">/plugins/servlet/backup</link>
    </web-item>

    <web-item name="Restore Link" key="restoreLink" section="index.links" weight="40" application="refapp">
        <label key="Restore"/>
        <link linkId="restoreLink">/plugins/servlet/restore</link>
    </web-item>

    <component name="Backup Manager" key="backup-manager" class="com.atlassian.refapp.backup.RefAppBackupManager"/>

    <component-import name="SAL Applications Properties" key="application-properties"
                      interface="com.atlassian.sal.api.ApplicationProperties"/>

    <component-import name="Backup Registry" key="backup-registry"
                      interface="com.atlassian.sal.api.backup.BackupRegistry"/>
</atlassian-plugin>
