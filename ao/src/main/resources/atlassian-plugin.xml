<atlassian-plugin key="com.atlassian.refapp.sal" name="${project.name}" system="true" pluginsVersion="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${pom.version}</version>
        <vendor name="Atlassian Software Systems Pty Ltd" url="http://www.atlassian.com"/>
    </plugin-info>

    <component name="Refapp Data Source Provider" key="refapp-datasource-provider"
               class="com.atlassian.activeobjects.refimpl.RefimplDataSourceProvider" public="true">
        <interface>com.atlassian.activeobjects.spi.DataSourceProvider</interface>
    </component>

    <component name="Refapp Data Source" key="refapp-datasource"
               class="com.atlassian.activeobjects.refimpl.RefimplDataSource" public="false">
        <interface>javax.sql.DataSource</interface>
    </component>

    <component-import name="Application Properties" key="application-properties"
                      interface="com.atlassian.sal.api.ApplicationProperties"/>
</atlassian-plugin>

